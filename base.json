{
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["deprecation"],
    "rules": {
        // Category: suspicious - most likely a mistake or useless
        /*
         * @ts-* comments can hide important errors
         * as well as ones that no longer exist.
         * So, they are limited to @ts-expect-error.
         */
        "@typescript-eslint/ban-ts-comment": 2,
        "@typescript-eslint/ban-types": 1,
        "@typescript-eslint/method-signature-style": 1,
        "@typescript-eslint/no-dynamic-delete": 1,
        "no-console": 1,
        "no-debugger": 1,
        "@typescript-eslint/no-base-to-string": 1,
        "@typescript-eslint/no-empty-function": 1,
        "@typescript-eslint/no-empty-interface": 1,
        "@typescript-eslint/no-extraneous-class": 1,
        "radix": 1,
        "@typescript-eslint/no-loop-func": 1,
        "no-await-in-loop": 1,
        "no-async-promise-executor": 1,
        "no-compare-neg-zero": 1,
        "no-cond-assign": 1,
        "no-constant-binary-expression": 1,
        "no-constant-condition": [1, { "checkLoops": false }],
        "no-dupe-else-if": 1,
        "no-duplicate-case": 1,
        "no-empty-character-class": 1,
        "no-empty-pattern": 1,
        "no-ex-assign": 1,
        "no-fallthrough": 1,
        "no-loss-of-precision": 1,
        "no-misleading-character-class": 1,
        "no-unreachable-loop": 1,
        "@typescript-eslint/no-use-before-define": 1,
        "@typescript-eslint/prefer-readonly": 1,
        "@typescript-eslint/prefer-return-this-type": 1,
        "@typescript-eslint/unified-signatures": 1,
        "no-extend-native": 1,
        "no-empty": 1, // empty `catch` blocks should have a comment to explain them
        "no-self-assign": 1,
        "no-self-compare": 1,
        "no-prototype-builtins": 1,
        "no-unexpected-multiline": 1,
        "no-unreachable": 1,
        "no-template-curly-in-string": 1,
        "no-unsafe-finally": 1,
        "no-unsafe-negation": 1,
        "no-unused-private-class-members": 1,
        "@typescript-eslint/no-unused-vars": 1,
        "require-atomic-updates": 1,
        "class-methods-use-this": 1,
        "complexity": [1, 10],
        "default-case-last": 1,
        "guard-for-in": 1,
        "no-case-declarations": 1,
        "no-extra-boolean-cast": 1,
        "no-extra-label": 1,
        "no-shadow-restricted-names": 1,
        "no-unneeded-ternary": 1,
        "no-unused-labels": 1,
        "no-useless-catch": 1,
        "no-useless-concat": 1,
        "no-useless-escape": 1,
        "no-useless-rename": 1,
        "no-useless-return": 1,
        "no-warning-comments": 1,
        "prefer-numeric-literals": 1,
        "require-await": 1,
        "require-yield": 1,
        "deprecation/deprecation": 1,

        // Category: stylistic decisions
        "@typescript-eslint/consistent-indexed-object-style": 1,
        "@typescript-eslint/consistent-type-assertions": 1,
        "@typescript-eslint/consistent-type-definitions": [1, "interface"],
        "@typescript-eslint/dot-notation": 1,
        "@typescript-eslint/explicit-member-accessibility": 1,
        "@typescript-eslint/member-delimiter-style": 1,
        "@typescript-eslint/no-duplicate-imports": 1,
        "@typescript-eslint/no-redeclare": 1,
        "@typescript-eslint/no-unused-expressions": 1,
        "@typescript-eslint/prefer-regexp-exec": 1,
        "prefer-spread": 1,
        "no-lonely-if": 1,
        "multiline-comment-style": 1,
        "max-params": 1,
        "curly": [1, "multi-or-nest"],
        "no-irregular-whitespace": [
            1,
            { "skipRegExps": false, "skipStrings": false }
        ],
        "no-var": 1,
        "eqeqeq": 1,
        "no-extra-semi": 1,
        "no-proto": 1,
        "no-regex-spaces": 1,
        "no-useless-computed-key": 1,
        "object-shorthand": 1,
        "one-var": [1, "never"],
        "operator-assignment": 1,
        "prefer-const": 1,
        "prefer-exponentiation-operator": 1,
        "prefer-object-has-own": 1,
        "prefer-object-spread": 1,
        "prefer-regex-literals": 1,
        "prefer-rest-params": 1,
        "prefer-template": 1,
        "symbol-description": 1,
        "yoda": 1,
        "no-mixed-spaces-and-tabs": 1,

        // Category: correctness
        "@typescript-eslint/no-explicit-any": 2,
        "@typescript-eslint/no-invalid-this": 2,
        "@typescript-eslint/no-non-null-asserted-nullish-coalescing": 2,
        "@typescript-eslint/no-require-imports": 2,
        "@typescript-eslint/no-throw-literal": 2,
        "no-invalid-regexp": 2,
        "no-useless-backreference": 2,
        "no-sparse-arrays": 2,
        "valid-typeof": 2,
        "no-nonoctal-decimal-escape": 2,
        "prefer-promise-reject-errors": 2,
        "require-unicode-regexp": 2
    }
}
