{
    "typescript": {
        "semiColons": "always",
        "quoteProps": "asNeeded",
        "useBraces": "always",
        "arrowFunction.useParentheses": "force"
    },
    "markdown": {
        "textWrap": "always"
    },
    "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json,jsonc,md,markdown}"],
    "excludes": [
        "**/node_modules",
        "**/*-lock.json",
        "**/.vscode"
    ],
    "plugins": [
        "https://plugins.dprint.dev/typescript-0.73.2.wasm",
        "https://plugins.dprint.dev/json-0.15.6.wasm",
        "https://plugins.dprint.dev/markdown-0.14.1.wasm"
    ],
    "indentWidth": 4,
    // Git automatically commits as LF on Windows
    "newLineKind": "system"
}
